<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.FragmentSearch">

        <LinearLayout
            android:id="@+id/dContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableLeft="@drawable/ic_router_24dp"
                android:drawableRight="@drawable/ic_bluetooth_blue_24dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="   Фаза A [12345678]"
                android:textSize="18dp"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                android:translationZ="4dp" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableLeft="@drawable/ic_mode_counter_24dp"
                android:drawableRight="@drawable/ic_bluetooth_blue_24dp"
                android:elevation="4dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:stateListAnimator="@null"
                android:text="   Счетчик [12345678]"
                android:textSize="18dp"
                android:translationZ="4dp" />
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_menu_search_white" />
</android.support.design.widget.CoordinatorLayout>
